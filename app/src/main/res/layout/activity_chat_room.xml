<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage">

    <TextView
        android:id="@+id/tv_channel_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/et_margin"
        android:gravity="center_horizontal"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-light"
        android:text="Clear Voice"
        android:textAlignment="center"
        android:textColor="#9F9D9D"
        android:textSize="30dp" />

    <ScrollView
        android:id="@+id/sv_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tv_channel_room"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/tv_info_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/et_margin"
            android:textSize="12sp" />
    </ScrollView>

    <ImageButton
        android:id="@+id/iv_inference"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/sv_display"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        android:onClick="onInferenceClick"
        android:scaleType="fitCenter"
        android:tint="#DDDEEC"
        app:srcCompat="@drawable/logo4" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/iv_inference"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:lines="2"
        android:text="OFF \nSpeech Enhancement"
        android:textAlignment="center"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_chat_room_size"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/et_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_mute"
            android:layout_width="0dp"
            android:layout_height="@dimen/iv_chat_room_size"
            android:layout_weight="1"
            android:onClick="onMuteClick"
            android:src="@drawable/btn_mute"
            android:tint="#B5B3DC" />


        <ImageView
            android:id="@+id/iv_hung_up"
            android:layout_width="0dp"
            android:layout_height="@dimen/iv_chat_room_size"
            android:layout_weight="1"
            android:onClick="onHungUpClick"
            android:src="@drawable/btn_hungup" />

        <ImageView
            android:id="@+id/iv_speaker"
            android:layout_width="0dp"
            android:layout_height="@dimen/iv_chat_room_size"
            android:layout_weight="1"
            android:onClick="onEarPhone"
            android:src="@drawable/btn_earphone"
            android:tint="#B5B3DC" />
    </LinearLayout>
</RelativeLayout>
